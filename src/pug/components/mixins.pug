mixin menu (items)
    for item in items
        li
            a(href=item.url) #{item.name}

mixin figures (item)
    figure.col-md-4.text-center
        figcaption.h-100
            if item.fav
                .favorite_plans_mark
                    svg.fav_icon
                        use(xlink:href="#fav_icon")
            else
            picture
                source(srcset=item.src + ".webp", type="image/webp")
                img.picture(src=item.src + ".png", alt=item.alt)
            h4 #{item.span}
            p.price #{item.price} грн*
            p.product_description.text-start #{item.description}

mixin special (item)
    figure.col-md-3
        figcaption.h-100
            if item.fav
                .favorite_plans_mark
                    svg.fav_icon
                        use(xlink:href="#fav_icon")
            else
            picture
                source(srcset=item.src + ".webp", type="image/webp")
                img.picture.w-100(src=item.src + ".png", alt=item.alt)
            .special_plan_discription
                h4 #{item.span}
                p.product_description.text-start #{item.description}
                .buy_block.d-flex.align-items-center
                    p.price.m-0 #{item.price} грн.
                    .d-flex.align-items-center
                        a.d-block(href="#") замовити
                        svg.arrow_special_plan
                            use(xlink:href="#arrow_special_plan")